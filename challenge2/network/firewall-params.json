{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fwName": { "value": "fw-lab-challenge2" },
    "fwPublicIpName": { "value": "fw-lab-pip" },
    "vnetName": { "value": "vnet-lab-challenge2" },

    "networkRuleCollections": {
      "value": [
        {
          "name": "lab-allow-internet",
          "properties": {
            "priority": 100,
            "action": { "type": "Allow" },
            "rules": [
              {
                "name": "services-internet",
                "protocols": ["Any"],
                "sourceAddresses": ["172.0.0.0/25"],
                "destinationAddresses": ["*"],
                "destinationPorts": ["*"]
              }
            ]
          }
        }
      ]
    },

    "natRuleCollections": {
      "value": [
        {
          "name": "lab-nat-web",
          "properties": {
            "priority": 200,
            "action": { "type": "Dnat" },
            "rules": [
              {
                "name": "nat-https-http",
                "protocols": ["TCP"],
                "sourceAddresses": ["*"],
                "destinationAddresses": [
                  "[reference(resourceId('Microsoft.Network/publicIPAddresses', parameters('fwPublicIpName'))).ipAddress]"
                ],
                "destinationPorts": ["80","443"],
                "translatedAddress": "172.0.0.10",
                "translatedPort": ["80","443"]
              }
            ]
          }
        }
      ]
    },

    "tags": {
      "value": {
        "exercise": "challenge2",
        "env": "lab"
      }
    }
  }
}

