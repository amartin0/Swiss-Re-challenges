{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "tags": {
      "type": "object",
      "defaultValue": {
        "exercise": "challenge2",
        "env": "lab"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "deployUdr",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/udr.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/udr-params.json",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "name": "deployVnet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "dependsOn": [
        "deployUdr"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/vnet.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/vnet-params.json",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "name": "deployFirewall",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "dependsOn": [
        "deployVnet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/firewall.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/firewall-params.json",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "name": "deployBastion",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "dependsOn": [
        "deployVnet",
        "deployFirewall"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/bastion.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/network/bastion-params.json",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "name": "deployServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "dependsOn": [
        "deployBastion"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/server/server.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "https://raw.githubusercontent.com/amartin0/Swiss-Re-challenges/refs/heads/main/challenge2/server/server-params.json",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
    "status": {
      "type": "string",
      "value": "Deployment completed successfully inside existing Resource Group."
    }
  }
}

