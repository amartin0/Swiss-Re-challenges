{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fwName": { "type": "string" },
    "fwPublicIpName": { "type": "string" },
    "vnetName": { "type": "string" },
    "networkRuleCollections": { "type": "array", "defaultValue": [] },
    "tags": { "type": "object", "defaultValue": {} }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2024-07-01",
      "name": "[parameters('fwPublicIpName')]",
      "location": "[resourceGroup().location]",
      "sku": { "name": "Standard" },
      "properties": { "publicIPAllocationMethod": "Static" },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Network/azureFirewalls",
      "apiVersion": "2024-07-01",
      "name": "[parameters('fwName')]",
      "location": "[resourceGroup().location]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('fwPublicIpName'))]"
      ],
      "properties": {
        "sku": { "name": "AZFW_VNet", "tier": "Standard" },
        "ipConfigurations": [
          {
            "name": "ipConfig",
            "properties": {
              "subnet": {
                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/AzureFirewallSubnet')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('fwPublicIpName'))]"
              }
            }
          }
        ],
        "networkRuleCollections": "[parameters('networkRuleCollections')]",
        "natRuleCollections": [
          {
            "name": "lab-nat-http-https",
            "properties": {
              "priority": 100,
              "action": { "type": "Dnat" },
              "rules": [
                {
                  "name": "nat-http",
                  "protocols": ["TCP"],
                  "sourceAddresses": ["*"],
                  "destinationAddresses": [
                    "[reference(resourceId('Microsoft.Network/publicIPAddresses', parameters('fwPublicIpName'))).ipAddress]"
                  ],
                  "destinationPorts": ["80"],
                  "translatedAddress": "172.16.0.10",
                  "translatedPort": "80"
                },
                {
                  "name": "nat-https",
                  "protocols": ["TCP"],
                  "sourceAddresses": ["*"],
                  "destinationAddresses": [
                    "[reference(resourceId('Microsoft.Network/publicIPAddresses', parameters('fwPublicIpName'))).ipAddress]"
                  ],
                  "destinationPorts": ["443"],
                  "translatedAddress": "172.16.0.10",
                  "translatedPort": "443"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}

